{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('login_register') }}
{% endblock %}

{% block background %}
    <div class="background login_background">
        <div class="shape"></div>
        <div class="shape"></div>
    </div>
{% endblock %}

{% block base %}
    <form id="login_form" action="{{ path('user_login') }}" method="post">
        {% if error %}
            <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <label for="username">Login:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required>

        <label for="password">Password:</label>
        <input type="password" id="password" name="_password" required>

        <input type="hidden" name="_target_path" value="/goodness/ranking">

        <button type="submit">login</button>

        <a href="{{ path('goodness_ranking') }}">Powrót</a>
        <a class="register_link" href="{{ path('user_register') }}">Zarejestruj się</a>

    </form>
{% endblock %}